<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diet">

    <Button
        android:id="@+id/menu"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_menu_black_24dp"
        android:backgroundTint="@color/colorAccent"
        />
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Diet Plan"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        />
    <Button
        android:id="@+id/profile"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20sp"
        android:layout_marginRight="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_person_black_24dp"
        android:backgroundTint="@color/colorAccent"
        />
    <Space
        android:id="@+id/space"
        android:layout_below="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="60sp"/>
    <TextView
        android:id="@+id/recipies"
        android:layout_below="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best foods to gain muscle\n\nClick image to for recipe"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_marginTop="40sp"
        android:id="@+id/scroll_view"
        android:layout_below="@+id/recipies"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/top_breakfast"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="310dp"
                android:background="@drawable/potrait2">
                <TextView
                    android:textColor="@color/cardview_light_background"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="#C1000000"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/low_carb"
                android:layout_below="@+id/top_breakfast"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/lunch">
                <TextView
                    android:textColor="@color/cardview_light_background"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="#C1000000"
                    android:layout_height="wrap_content"
                    android:text="Low Carb"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Breakfast"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/low_carb"
                android:layout_width="250dp"
                android:layout_height="310dp"
                android:background="@drawable/potrait2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="#C1000000"
                    android:text="Breakfast"
                    android:textAlignment="center"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dinner"
                android:layout_below="@+id/Breakfast"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/dinner"
                android:layout_marginTop="10dp">
                <TextView
                    android:textColor="@color/cardview_light_background"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="#C1000000"
                    android:layout_height="wrap_content"
                    android:text="Dinner"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/breakfast3"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/dinner"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="310dp"
                android:background="@drawable/potrait4">
                <TextView
                    android:textColor="@color/cardview_light_background"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="#C1000000"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/highprotein_chicken"
                android:layout_below="@+id/breakfast3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/food_landscape"
                android:layout_marginTop="20sp">
                <TextView
                    android:textColor="@color/cardview_light_background"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="#C1000000"
                    android:layout_height="wrap_content"
                    android:text="High protein Delicious Chicken"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/low_carb2"
                android:layout_below="@+id/highprotein_chicken"
                android:layout_marginTop="20dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/lunch">
                <TextView
                    android:textColor="@color/cardview_light_background"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="#C1000000"
                    android:layout_height="wrap_content"
                    android:text="Lunch"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/breakfast2"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/low_carb2"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="310dp"
                android:background="@drawable/potrait3">
                <TextView
                    android:textColor="@color/cardview_light_background"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="#C1000000"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lunch"
                android:layout_below="@+id/breakfast2"
                android:layout_marginTop="20dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/lunch">
                <TextView
                    android:textColor="@color/cardview_light_background"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="#C1000000"
                    android:layout_height="wrap_content"
                    android:text="Lunch"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/breakfast4"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lunch"
                android:layout_marginTop="20dp"
                android:layout_width="250dp"
                android:layout_height="310dp"
                android:background="@drawable/potrait4">
                <TextView
                    android:textColor="@color/cardview_light_background"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:background="#C1000000"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    />
            </RelativeLayout>
            <Space
                android:id="@+id/space_on_the_bottom_of_recipies"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/breakfast4"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>